<div class="container">
  <h1>Docs#Show</h1>

    <% if @doc.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@doc.errors.count, "error") %> prohibited
          this doc from being saved:
        </h2>
        <ul>
          <% @doc.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

<div class="panel panel-default">
  <div class="panel-heading">Details</div>
  <div class="panel-body">
    <div class="form-group">
      <label>Name :</label>
      <%= @doc.name %>
    </div>

    <div class="form-group">
      <label>Author :</label>
      <%= @doc.author %>
    </div>

    <div class="form-group">
      <label>Year :</label>
      <%= @doc.year %>
    </div>

    <div class="form-group">
      <label>Publisher :</label>
      <%= @doc.publisher %>
    </div>

    <div class="form-group">
      <label>File PDF :</label>
      <%= link_to @doc.name ,@doc.pdf.url %>
    </div>

    <hr>
    <div class="form-group">
      <label>Desciption :</label>
      <%= @doc.description %>
    </div>
    <hr>

    <div class="form-group">
      <label>Keywords :</label>
       <% @doc.words.each_with_index do |word , index| %>
          <%= word %> 
            <% if index != @doc.words.length - 1 %>
            <b>,</b>
          <% end %>
       <% end %>
    </div>

  </div><!-- panel-body -->
</div>

</div>