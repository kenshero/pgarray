<div class="container">
  <h1>Docs#Edit</h1>

    <% if @doc.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@doc.errors.count, "error") %> prohibited
          this doc from being saved:
        </h2>
        <ul>
          <% @doc.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <%= form_for @doc do |f| %>
  <div class="form-group">
    <label for="bane">Name :</label>
    <%= f.text_field :name ,class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="input_fields_wrap">
      <label for="words">Keywords :</label>
      <a href="#" class="add_field_button">Add More Fields</a>
      <% @doc.words.each do |word| %>
        <div>
          <input type="text" name="doc[words][]" id="doc_words_" value="<%= word %>"
          class="form-word" /><a href="#" class="remove_field">Remove</a>
        </div>
      <% end %>
  </div>

  <div class="form-group">
    <label for="words">Author :</label>
    <%= f.text_field :author ,class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="words">Year :</label>
    <%= f.text_field :year  ,class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="words">Publisher :</label>
    <%= f.text_field :publisher  ,class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="words">Description :</label>
    <%= f.text_area :description  ,class: "form-control",rows: "6" %>
  </div>

  <div class="form-group">
    <label for="words">Cover file :</label>
    <%= image_tag @doc.pdf.url(:pdf_thumbnail) %>
  </div>

  <div class="form-group">
    <label for="exampleInputFile">File input update :</label>
    <%= f.file_field :pdf %>
    <p class="help-block">PDF ONLY !</p>
  </div>

  <%= f.submit "Submit" , class: "btn btn-primary" %>
  <% end%>

</div>